{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "build",
		"target": "es2016",                                  
		"module": "commonjs",                                
		"esModuleInterop": true,                           
		"forceConsistentCasingInFileNames": true,            
		"strict": true,                                      
		"skipLibCheck": true,
	        "noImplicitThis": false	
	},
	"include": ["./src/"],
	"exclude": ["node_modules"]
}
